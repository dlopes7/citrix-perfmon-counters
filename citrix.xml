<?xml version="1.0"?>
<instrumentationManifest
    xmlns="http://schemas.microsoft.com/win/2004/08/events"
    xmlns:win="https://manifests.microsoft.com/win/2004/08/windows/events"
    xmlns:xs="https://www.w3.org/2001/XMLSchema"
    >

  <instrumentation>

    <counters
    xmlns="http://schemas.microsoft.com/win/2005/12/counters"
    schemaVersion="2.0">

    <provider
        applicationIdentity="citrix_counters.exe"
        symbol="CitrixICA"
        providerName="CitrixICA"
        providerGuid="{000873ea-75ca-4da3-ab19-00c3073591b8}">

        <counterSet
            guid="{79f42f00-c119-4f35-a0cc-153fedee585d}"
            uri="Dynatrace.PerfCounters.ICASession"
            symbol="ICASession"
            name="ICA Session"
            nameID="100"
            description="Citrix ICA Session Counters"
            descriptionID="102"
            instances="multiple">

            <counter
                id="1"
                uri="Dynatrace.PerfCounters.ICASession.LatencyLastRecorded"
                symbol="LatencyLastRecorded"
                name="Latency - Last Recorded"
                nameID="104"
                description="The last recorded latency measurement for the session."
                descriptionID="106"
                type="perf_counter_rawcount"
                detailLevel="standard"
            >
                <counterAttributes>
                    <counterAttribute name="reference"/>
                </counterAttributes>
            </counter>

            <counter
                id="2"
                uri="Dynatrace.PerfCounters.ICASession.LatencySessionAverage"
                symbol="LatencySessionAverage"
                name="Latency - Session Average"
                nameID="108"
                description="The average client latency over the lifetime of a session."
                descriptionID="110"
                type="perf_counter_rawcount"
                detailLevel="standard"
            >
                <counterAttributes>
                    <counterAttribute name="reference"/>
                </counterAttributes>
            </counter>

            <counter
                id="3"
                uri="Dynatrace.PerfCounters.ICASession.InputSessionBandwidth"
                symbol="InputSessionBandwidth"
                name="Input Session Bandwidth"
                nameID="112"
                description="The bandwidth, measured in bps, used from client to server for a session."
                descriptionID="114"
                type="perf_counter_rawcount"
                detailLevel="standard"
            >
                <counterAttributes>
                    <counterAttribute name="reference"/>
                </counterAttributes>
            </counter>

            <counter
                id="4"
                uri="Dynatrace.PerfCounters.ICASession.OutputSessionBandwidth"
                symbol="OutputSessionBandwidth"
                name="Output Session Bandwidth"
                nameID="116"
                description="The bandwidth, measured in bps, used from server to client for a session."
                descriptionID="118"
                type="perf_counter_rawcount"
                detailLevel="standard"
            >
                <counterAttributes>
                    <counterAttribute name="reference"/>
                </counterAttributes>
            </counter>
        </counterSet>

    </provider>
</counters>
  </instrumentation>
</instrumentationManifest>